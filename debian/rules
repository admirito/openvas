#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

.PHONY: override_dh_clean override_dh_auto_configure override_dh_installchangelogs override_dh_installinit

override_dh_clean:
	debconf-updatepo
	dh_clean

override_dh_auto_configure:
	dh_auto_configure -- -DLOCALSTATEDIR=/var -DSYSCONFDIR=/etc

override_dh_installchangelogs:
	dh_installchangelogs -k CHANGES

override_dh_installinit:
	dh_installinit --name=openvas-scanner

%:
	dh $@
