#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

.PHONY: override_dh_clean override_dh_auto_configure override_dh_installchangelogs override_dh_installinit override_dh_auto_test

override_dh_clean:
	debconf-updatepo
	dh_clean

override_dh_auto_configure:
	dh_auto_configure -- -DLOCALSTATEDIR=/var -DOPENVAS_RUN_DIR=/run/gvm -DSYSCONFDIR=/etc -DLIBDIR=/usr/lib/$(DEB_HOST_MULTIARCH)

override_dh_installchangelogs:
	dh_installchangelogs -k CHANGELOG.md

override_dh_auto_install:
	dh_auto_install
	sed 's|^unixsocket .*|unixsocket /run/redis/redis.sock|' config/redis-openvas.conf > debian/openvas/etc/openvas/redis.conf.example

override_dh_auto_test:
	true

%:
	dh $@
